{{> welcome-menu active="login"}}

<div class="spacer"></div>

<section class="section">
  <div class="columns">
    <div class="column">
      <p>
        &nbsp
      </p>
    </div>  
    <div class="box column">
      <div class="column">
        <label class="title is-4">Log in</label>
        <p class="{{messageType}} mt-2">                <!-- this paragraph is used to notify user about wrong password, etc. -->
          {{message}}
        </p>
        <hr>  
        <form action="/authenticate" method="POST">
          <div class="field">
            <label class="label">Email</label> <input class="input" type="text" placeholder="Enter email" name="email">
          </div>
          <div class="field">
            <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password">
          </div>
          <div class="field is-grouped">
            <button class="button is-link">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <div class="column">
      <p>
        &nbsp
      </p>
    </div>
  </div>    
</section>