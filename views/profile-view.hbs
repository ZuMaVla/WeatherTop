{{> menu active="myProfile"}}

<section class="columns box is-3 has-text-centered">

    <div class="column">
      <form action="/register" method="POST">
        <label class="label">Name</label>
        <div class="field is-horizontal">
          <div class="field-body">
            <div class="field">
              <input class="input" type="text" value="{{user.firstName}}" name="firstName">
            </div>
            <div class="field">
              <input class="input" type="text" value="{{user.lastName}}" name="lastName">
            </div>
          </div>
        </div>
        <div class="field disabled">
          <label class="label">Email</label> <input class="input" type="text" placeholder="Enter email" name="email" value="{{user.email}}">
        </div>
        <div class="field">
          <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password" value="{{user.password}}">
        </div>
        <div class="field is-grouped">
          <button class="button is-link">Submit</button>
        </div>
      </form>
    </div>
    <div class="column is-narrow">
      <p>
        &nbsp
      </p>
      {{> icons/user}}
      <h1 class="title">My Profile</h1>
      
    </div>

</section>