
<div class="box has-text-light weatherBox mb-1">
  <div class="weatherIcon">
    {{> icons/location}}
  </div>
  <h1 class="title mb-1 is-4 has-text-light">
    {{name}}
  </h1>
  <hr style="margin-top: 10px; margin-bottom: 10px;">
  <p>Lat: {{latitude}}</p>
  <p>Lng: {{longitude}}</p>
</div>
<span style="margin-right: 4px;"></span>

